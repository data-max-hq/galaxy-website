---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Logo from '../assets/logo.png';

const blogEntries = await getCollection('blog');
const posts = blogEntries
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
const partners = await getCollection('partners');
const brands = await getCollection('brands');

const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\/+/g, '')}`;
const brandLogoUrl = (logo?: string) => (logo ? withBase(`brands/${logo}`) : undefined);
const brandPageUrl = (slug: string) => withBase(`brands/${slug}/`);
const brandsIndexUrl = withBase('brands/');
const blogIndexUrl = withBase('blog/');
const blogPageUrl = (slug: string) => withBase(`blog/${slug}/`);
const partnerLogoUrl = (logo?: string) => (logo ? withBase(logo) : undefined);
const partnersPageUrl = withBase('partners/');
const historyPageUrl = withBase('history/');
const servicesPageUrl = withBase('services/');
---

<Layout
  title="Galaxy | Pharmaceutical Distribution by Profarma Group"
  description="Galaxy delivers pharmaceutical therapies across Albania with precise distribution, regulatory rigor, and trusted partnerships."
>
  <div class="min-h-screen bg-[var(--page)] text-[var(--ink)]">
    <header class="sticky top-0 z-40 border-b border-black/5 bg-white/95 backdrop-blur reveal-up is-visible">
      <div class="mx-auto flex max-w-6xl flex-wrap items-center justify-between gap-4 px-5 py-3 text-sm font-semibold sm:px-6 sm:py-4">
        <a href="#home" class="flex items-center gap-3">
          <img src={Logo.src} width="120" height="40" alt="Galaxy logo" class="h-10 w-auto" />
        </a>
        <nav class="flex flex-wrap items-center gap-4 text-[var(--muted)]">
          <a href="#home" class="hover:text-[var(--slate)]">Home</a>
          <a href="#about" class="hover:text-[var(--slate)]">About</a>
          <a href="#benefits" class="hover:text-[var(--slate)]">Capabilities</a>
          <a href="#partners" class="hover:text-[var(--slate)]">Partners</a>
          <a href="#blog" class="hover:text-[var(--slate)]">Blog</a>
          <a href={withBase('contact/')} class="hover:text-[var(--slate)]">Contact</a>
        </nav>
        <a href={withBase('contact/')} class="rounded-full border border-[var(--slate)] px-5 py-2 text-[var(--slate)]">Work with us</a>
      </div>
    </header>

    <main class="mx-auto flex max-w-6xl flex-col gap-16 px-5 pb-24 pt-12 sm:gap-24 sm:px-6 sm:pt-16" id="home">
      <section class="hero-radiance relative overflow-hidden rounded-[2.75rem] bg-[#0f1933] px-5 py-10 text-white sm:px-8 sm:py-12" data-animate>
        <div class="motion-glow absolute inset-0 -z-10 opacity-50" style="background-image: radial-gradient(circle at 20% 20%, rgba(255,255,255,.25), transparent 45%), radial-gradient(circle at 80% 10%, rgba(12,100,255,.4), transparent 35%), linear-gradient(120deg, rgba(15,25,51,0.8), rgba(7,15,30,0.8)); background-size: cover;" />
        <div class="grid gap-12 lg:grid-cols-[minmax(0,1fr)_360px] lg:items-center">
          <div class="space-y-6">
            <p class="text-xs uppercase tracking-[0.4em] text-white/70">Profarma Group</p>
            <h1 class="text-4xl font-semibold leading-tight sm:text-5xl">
              Shining a light on health across Albania.
            </h1>
            <p class="text-lg text-white/80">
              Galaxy SHPK, part of Profarma Group, keeps 1,400 therapies moving to 1,000 pharmacies with GDP-certified stewardship so every launch arrives fast, safe, and compliant.
            </p>
            <div class="grid grid-cols-2 gap-4 text-sm sm:grid-cols-3 sm:gap-6">
              <div>
                <p class="text-3xl font-semibold">Precision</p>
                <p class="uppercase tracking-[0.2em] text-white/70">Telemetry-controlled routes</p>
              </div>
              <div>
                <p class="text-3xl font-semibold">Coverage</p>
                <p class="uppercase tracking-[0.2em] text-white/70">Community to tertiary care</p>
              </div>
              <div>
                <p class="text-3xl font-semibold">Velocity</p>
                <p class="uppercase tracking-[0.2em] text-white/70">Regulatory + supply in sync</p>
              </div>
            </div>
            <div class="flex flex-wrap gap-4">
              <a href="#about" class="rounded-full bg-white px-6 py-3 text-sm font-semibold text-[#0f1933]">Discover Galaxy</a>
              <a href={withBase('contact/')} class="rounded-full border border-white/40 px-6 py-3 text-sm font-semibold text-white">Talk to us</a>
            </div>
          </div>
          <div class="glow-card rounded-[2rem] p-6 text-[var(--slate)]">
            <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[var(--muted)]">Cold-chain integrity</p>
            <h2 class="mt-3 text-2xl font-semibold text-[var(--slate)]">Live telemetry coverage</h2>
            <p class="mt-3 text-sm text-[var(--muted)]">
              Connected hubs in Tirana, Durres, and Korçë provide real-time temperature, vibration, and access alerts so partners can see the exact condition of their inventory at any moment.
            </p>
            <div class="mt-6 grid gap-4 text-center text-sm">
              <div class="rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3">
                <p class="text-3xl font-semibold text-[var(--slate)]">5</p>
                <p class="uppercase tracking-[0.2em] text-[var(--muted)]">Regional hubs</p>
              </div>
              <div class="rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3">
                <p class="text-3xl font-semibold text-[var(--slate)]">120+</p>
                <p class="uppercase tracking-[0.2em] text-[var(--muted)]">Sensors online</p>
              </div>
              <div class="rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3">
                <p class="text-3xl font-semibold text-[var(--slate)]">5m</p>
                <p class="uppercase tracking-[0.2em] text-[var(--muted)]">Refresh rate</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="stats-ribbon mt-8 grid gap-4 rounded-[2rem] px-5 py-6 text-[var(--slate)] shadow-[0_25px_50px_rgba(3,15,35,0.08)] md:-mt-6 sm:grid-cols-2 lg:grid-cols-4" data-animate>
        <div class="stats-item flex items-center gap-4">
          <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-white text-lg font-semibold text-[var(--accent)]">1</span>
          <div>
            <p class="text-xs uppercase tracking-[0.35em] text-[var(--muted)]">Therapies</p>
            <p class="text-xl font-semibold">1,400+ products guided</p>
          </div>
        </div>
        <div class="stats-item flex items-center gap-4">
          <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-white text-lg font-semibold text-[var(--accent)]">∞</span>
          <div>
            <p class="text-xs uppercase tracking-[0.35em] text-[var(--muted)]">Pharmacies</p>
            <p class="text-xl font-semibold">1,000+ network partners</p>
          </div>
        </div>
        <div class="stats-item flex items-center gap-4">
          <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-white text-lg font-semibold text-[var(--accent)]">24</span>
          <div>
            <p class="text-xs uppercase tracking-[0.35em] text-[var(--muted)]">Hours</p>
            <p class="text-xl font-semibold">Nationwide delivery loop</p>
          </div>
        </div>
        <div class="stats-item flex items-center gap-4">
          <span class="flex h-12 w-12 items-center justify-center rounded-2xl bg-white text-lg font-semibold text-[var(--accent)]">QC</span>
          <div>
            <p class="text-xs uppercase tracking-[0.35em] text-[var(--muted)]">Quality</p>
            <p class="text-xl font-semibold">GDP-certified operations</p>
          </div>
        </div>
      </section>

      <section id="about" class="grid gap-10 rounded-[2.5rem] bg-white p-6 shadow-[0_25px_60px_rgba(8,20,43,0.08)] sm:p-10 lg:grid-cols-2" data-animate>
        <div class="space-y-4">
          <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">Who we are</p>
          <h2 class="text-2xl font-semibold text-[var(--slate)] sm:text-3xl">
            A Profarma Group company uniting production, regulatory affairs, and national distribution.
          </h2>
          <p class="text-lg text-[var(--muted)]">
            From dossier management and pharmacovigilance to last-mile fulfillment, Galaxy is the single accountable partner for innovators entering Albania. Our teams orchestrate each stage with transparent data, certified facilities, and people who understand the realities of Albanian healthcare—because our mission is shining a light on health for every patient we reach.
          </p>
          <div class="grid gap-6 sm:grid-cols-2">
            <div class="rounded-2xl border border-black/5 bg-[var(--page)] p-5">
              <p class="text-lg font-semibold text-[var(--slate)]">Regulatory depth</p>
              <p class="text-sm text-[var(--muted)]">Lifecycle submissions, vigilance, and MoH coordination.</p>
            </div>
            <div class="rounded-2xl border border-black/5 bg-[var(--page)] p-5">
              <p class="text-lg font-semibold text-[var(--slate)]">Digital logistics</p>
              <p class="text-sm text-[var(--muted)]">Cold-chain telemetry, predictive alerts, and partner dashboards.</p>
            </div>
          </div>
          <a href={historyPageUrl} class="inline-flex items-center gap-2 text-sm font-semibold text-[var(--accent)]">
            Explore our full history
            <span aria-hidden="true">→</span>
          </a>
        </div>
        <div class="relative">
          <div class="h-full rounded-[2rem] bg-gradient-to-br from-[#d2e7ff] via-white to-[#f5f8fb] p-10">
            <div class="space-y-4 text-[var(--slate)]">
              <p class="text-sm uppercase tracking-[0.4em] text-[var(--muted)]">Mission</p>
              <p class="text-lg font-medium">
                Shining a light on health means coordinating production, regulatory, and distribution so 1,000 pharmacies and hospitals can access 1,400 therapies the moment they are authorized.
              </p>
              <div class="mt-6 rounded-2xl bg-white/80 p-5 text-sm text-[var(--muted)] shadow-inner">
                "Galaxy acts like an extension of our launch teams—aligning regulatory, market, and supply milestones from day zero." – Profarma Group Leadership
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="benefits" class="rounded-[2.5rem] bg-[#0c2f74] px-5 py-10 text-white sm:px-8 sm:py-12" data-animate>
        <div class="space-y-2 text-center">
          <p class="text-xs uppercase tracking-[0.4em] text-white/70">Capabilities</p>
          <h2 class="text-2xl font-semibold sm:text-3xl">Benefits that save you time and safeguard therapies.</h2>
          <p class="text-white/70">A four-step operating rhythm that keeps dossiers, inventory, and pharmacies aligned.</p>
        </div>
        <div class="timeline-grid mt-12 grid gap-8 md:grid-cols-4">
          <article class="timeline-step" data-step="01">
            <div class="timeline-step-content text-sm">
              <p class="text-xs uppercase tracking-[0.35em] text-white/70">Onboard</p>
              <h3 class="mt-2 text-2xl font-semibold">Regulatory playbooks</h3>
              <p class="mt-3 text-white/80">Dossier translation, MoH submissions, and vigilance set-up handled with mirrored data rooms.</p>
              <span class="mt-4 inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.3em] text-white/70">Shared QA desk</span>
            </div>
          </article>
          <article class="timeline-step" data-step="02">
            <div class="timeline-step-content text-sm">
              <p class="text-xs uppercase tracking-[0.35em] text-white/70">Launch</p>
              <h3 class="mt-2 text-2xl font-semibold">Therapy choreography</h3>
              <p class="mt-3 text-white/80">Cold rooms, pick accuracy, and labeling synced with your global release calendar for zero-lag handoffs.</p>
              <span class="mt-4 inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.3em] text-white/70">Validated lanes</span>
            </div>
          </article>
          <article class="timeline-step" data-step="03">
            <div class="timeline-step-content text-sm">
              <p class="text-xs uppercase tracking-[0.35em] text-white/70">Monitor</p>
              <h3 class="mt-2 text-2xl font-semibold">Live telemetry</h3>
              <p class="mt-3 text-white/80">Dashboards blend IoT sensors, recall readiness, and pharmacy feedback loops for proactive interventions.</p>
              <span class="mt-4 inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.3em] text-white/70">Signal alerts</span>
            </div>
          </article>
          <article class="timeline-step" data-step="04">
            <div class="timeline-step-content text-sm">
              <p class="text-xs uppercase tracking-[0.35em] text-white/70">Grow</p>
              <h3 class="mt-2 text-2xl font-semibold">Network expansion</h3>
              <p class="mt-3 text-white/80">Retail activations and hospital contracts scaled through 1,000 pharmacy relationships and Profarma co-marketing.</p>
              <span class="mt-4 inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.3em] text-white/70">Portal insights</span>
            </div>
          </article>
        </div>
        <div class="mt-10 text-center">
          <a
            href={servicesPageUrl}
            class="inline-flex items-center gap-2 rounded-full border border-white/40 px-6 py-3 text-sm font-semibold text-white"
          >
            View all services
            <span aria-hidden="true">→</span>
          </a>
        </div>
        <div class="mt-12 rounded-[2rem] border border-white/15 bg-white/10 p-10 text-center text-2xl font-semibold tracking-tight">
          Offering you…
          <span
            class="ml-3 font-semibold text-white typewriter"
            data-typewriter
            data-words='["Free Shipping","Customer Service","Regulatory Guidance"]'
          >
            Free Shipping
          </span>
        </div>
      </section>

      <section id="partners" class="space-y-8" data-animate>
        <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">Partners</p>
            <h2 class="text-2xl font-semibold text-[var(--slate)] sm:text-3xl">Trusted network delivering impact together.</h2>
          </div>
          <div class="flex flex-wrap gap-4 text-sm font-semibold text-[var(--accent)]">
            <a href={partnersPageUrl} class="inline-flex items-center gap-2">
              View partner directory
              <span aria-hidden="true">→</span>
            </a>
            <a href={withBase('contact/')} class="inline-flex items-center gap-2">
              Become a partner
              <span aria-hidden="true">→</span>
            </a>
          </div>
        </div>
        <div class="grid gap-6 md:grid-cols-2">
          {partners.map((partner) => {
            const logoSrc = partnerLogoUrl(partner.data.logo);
            return (
            <article class="glow-card flex flex-col gap-4 rounded-3xl p-6" key={partner.id}>
              <div class="flex items-center gap-4">
                <div class="partner-logo flex h-20 w-20 items-center justify-center rounded-3xl bg-white p-2 shadow-sm">
                  {logoSrc && <img src={logoSrc} alt={`${partner.data.name} logo`} class="h-full w-full object-contain" />}
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-[var(--slate)]">{partner.data.name}</h3>
                  <p class="text-sm text-[var(--muted)]">{partner.data.focus}</p>
                </div>
              </div>
              <p class="text-sm text-[var(--muted)]">{partner.data.description}</p>
              <a href={partner.data.website} class="text-sm font-semibold text-[var(--accent)]" target="_blank" rel="noopener">
                Visit website →
              </a>
            </article>
            );
          })}
        </div>
        <div class="mt-10 grid gap-6 md:grid-cols-2">
          <blockquote class="glow-card rounded-3xl p-6 text-sm text-[var(--muted)]">
            <p class="text-xs uppercase tracking-[0.35em] text-[var(--slate)]">Partner voice</p>
            <p class="mt-3 text-lg font-semibold text-[var(--slate)]">“Galaxy gives us day-zero visibility on launches—regulatory, market access, and inventory share a single tracker.”</p>
            <p class="mt-4 font-semibold text-[var(--slate)]">Profarma Group Leadership</p>
          </blockquote>
          <blockquote class="glow-card rounded-3xl p-6 text-sm text-[var(--muted)]">
            <p class="text-xs uppercase tracking-[0.35em] text-[var(--slate)]">Pharmacy network</p>
            <p class="mt-3 text-lg font-semibold text-[var(--slate)]">“Temperature telemetry and 24h restocks keep our pediatric lines confident even during peak demand.”</p>
            <p class="mt-4 font-semibold text-[var(--slate)]">NeoKids Retail Lead</p>
          </blockquote>
        </div>
      </section>

      <section id="blog" class="space-y-8" data-animate>
        <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">Blog</p>
            <h2 class="text-3xl font-semibold text-[var(--slate)]">Signals from our distribution floor.</h2>
          </div>
          <a href={blogIndexUrl} class="text-sm font-semibold text-[var(--accent)]">View all posts →</a>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {posts.map((post) => (
            <a
              href={blogPageUrl(post.slug)}
              class="glow-card flex flex-col overflow-hidden rounded-3xl"
              key={post.id}
            >
              {post.data.heroImage && (
                <img
                  src={withBase(post.data.heroImage.src)}
                  alt={post.data.heroImage.alt}
                  class="h-44 w-full object-cover"
                  loading="lazy"
                />
              )}
              <div class="flex flex-1 flex-col gap-3 p-5">
                <p class="text-xs uppercase tracking-[0.3em] text-[var(--muted)]">
                  {post.data.publishDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </p>
                <h3 class="text-lg font-semibold text-[var(--slate)]">{post.data.title}</h3>
                <p class="text-sm text-[var(--muted)]">{post.data.description}</p>
                <div class="mt-auto text-sm font-semibold text-[var(--accent)]">Read more →</div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <section id="brands" class="space-y-8" data-animate>
        <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">Brands</p>
            <h2 class="text-3xl font-semibold text-[var(--slate)]">Featured portfolio lines.</h2>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <a href={brandsIndexUrl} class="text-sm font-semibold text-[var(--accent)]">View all brands →</a>
            <div class="hidden gap-3 md:flex">
              <button type="button" class="rounded-full border border-black/10 px-4 py-2 text-sm" data-carousel-prev>Prev</button>
              <button type="button" class="rounded-full border border-black/10 px-4 py-2 text-sm" data-carousel-next>Next</button>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="brand-carousel flex overflow-x-auto scroll-smooth no-scrollbar" data-brand-carousel>
            {brands.map((brand) => {
              const logoSrc = brandLogoUrl(brand.data.logo);
              return (
                <a
                  href={brandPageUrl(brand.id)}
                  class="brand-card min-w-[260px] flex-1 rounded-3xl p-6 transition"
                  style={`border-top: 4px solid ${brand.data.featuredColor};`}
                >
                  <div class="flex items-center gap-4">
                    {logoSrc && (
                      <div class="brand-logo-tile flex items-center justify-center">
                        <img src={logoSrc} alt={`${brand.data.name} logo`} class="max-h-12 max-w-12 object-contain" />
                      </div>
                    )}
                    <div>
                      <p class="text-xs uppercase tracking-[0.35em] text-[var(--muted)]">Therapies</p>
                      <h3 class="text-xl font-semibold text-[var(--slate)]">{brand.data.name}</h3>
                    </div>
                  </div>
                  <p class="mt-2 text-sm text-[var(--muted)]">{brand.data.tagline}</p>
                  <div class="mt-4 flex items-center gap-2 text-sm font-semibold text-[var(--accent)]">
                    <span>View products</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 12h14m0 0-5-5m5 5-5 5" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                  </div>
                </a>
              );
            })}
          </div>
        </div>
        <div class="mt-10 text-center">
          <a href={brandsIndexUrl} class="inline-flex items-center gap-2 rounded-full border border-[var(--slate)] px-6 py-3 text-sm font-semibold text-[var(--slate)]">
            Browse the full brand index
            <span aria-hidden="true">→</span>
          </a>
        </div>
      </section>

      <section
        id="contact"
        class="grid gap-10 rounded-[2.5rem] border border-black/5 bg-white p-6 shadow-[0_25px_60px_rgba(8,20,43,0.08)] sm:p-10 md:grid-cols-[1.2fr_1fr]"
        data-animate
      >
        <div class="space-y-4">
          <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">Contact</p>
          <h2 class="text-3xl font-semibold text-[var(--slate)]">Let's plan your next launch in Albania.</h2>
          <p class="text-[var(--muted)]">
            Share dossier milestones, inventory targets, or partner needs. A Galaxy specialist replies within 24 hours with a clear plan coordinated across regulatory and distribution.
          </p>
          <form class="grid gap-4 text-[var(--slate)]">
            <div class="grid gap-4 md:grid-cols-2">
              <div>
                <label class="text-sm font-semibold">Full name</label>
                <input type="text" placeholder="Arta Dervishi" class="mt-1 w-full rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3 text-sm" />
              </div>
              <div>
                <label class="text-sm font-semibold">Company</label>
                <input type="text" placeholder="Your organization" class="mt-1 w-full rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3 text-sm" />
              </div>
            </div>
            <div class="grid gap-4 md:grid-cols-2">
              <div>
                <label class="text-sm font-semibold">Work email</label>
                <input type="email" placeholder="you@company.com" class="mt-1 w-full rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3 text-sm" />
              </div>
              <div>
                <label class="text-sm font-semibold">Phone</label>
                <input type="tel" placeholder="+355 68 000 000" class="mt-1 w-full rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3 text-sm" />
              </div>
            </div>
            <div>
              <label class="text-sm font-semibold">Message</label>
              <textarea rows="4" placeholder="Tell us about your portfolio or submission timeline." class="mt-1 w-full rounded-2xl border border-black/10 bg-[var(--page)] px-4 py-3 text-sm"></textarea>
            </div>
