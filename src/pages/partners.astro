---
import Layout from '../layouts/Layout.astro';

interface PartnerEntry {
  id: string;
  name: string;
  category: string;
  description: string;
  ctaLabel: string;
  logo?: string;
}

const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\/+/g, '')}`;

const partners: PartnerEntry[] = [
  {
    id: 'profarma',
    name: 'Profarma',
    category: 'Health/Medical/Pharmaceuticals',
    description:
      'Profarma is the only Albanian-speaking pharmaceutical company and carries more than 70 years of uninterrupted healthcare history.',
    ctaLabel: 'Visit Profarma',
    logo: withBase('logos/profarma.png'),
  },
  {
    id: 'dermaviduals',
    name: 'Dermaviduals',
    category: 'Skin Care · Skin Protection · Dermatics',
    description:
      'Dermaviduals® supports preventive routines that help avoid problem skin and provides dermaceutical care that improves already stressed complexions.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/dermaviduals.png'),
  },
  {
    id: '3chenes',
    name: '3 Chênes',
    category: 'Food supplements & natural cosmetics',
    description:
      '3 Chênes® creates food supplements and natural cosmetics designed for the fitness, beauty, and health of the entire family.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/3chenes.png'),
  },
  {
    id: 'neo-kids',
    name: 'Neo Kids',
    category: 'Natural supplements for the whole family',
    description:
      'Neo Kids formulates natural supplements for children and adults, powered by medicinal herbs, mushrooms, vitamins, trace elements, and minerals.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/neokids.png'),
  },
  {
    id: 'rokivit',
    name: 'Rokivit',
    category: 'Pharmaceutical products from Rokitan',
    description:
      'Rokivit develops healthcare products in clearly defined therapeutic areas, pushing new formulations and entering new markets.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/rokivit.png'),
  },
  {
    id: 'multi-gyn',
    name: 'Multi-Gyn',
    category: 'Get back to brilliant with Multi-Gyn',
    description:
      'Multi-Gyn delivers natural-based products clinically proven to reduce vaginal discomfort from BV, thrush, dryness, itch, and odor.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/multigyn.png'),
  },
  {
    id: '7days',
    name: '7 Days',
    category: 'Cosmetics brand',
    description:
      '7DAYS is a playful cosmetics trendsetter beloved for its bold concepts, eye-catching design, product quality, and transparent mindset.',
    ctaLabel: 'Explore brand',
    logo: withBase('brands/7days.png'),
  },
  {
    id: 'mentholatum',
    name: 'Mentholatum',
    category: 'Healthcare products',
    description:
      'Mentholatum is a specialized global company improving health and wellness with effective, innovative, and accessible products.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/mentholatum.png'),
  },
  {
    id: 'officina',
    name: 'Officina Naturae',
    category: 'Cosmetics and detergents',
    description:
      'Officina naturae designs excellent and truly effective cosmetics and detergents that remain safe for people and nature.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/officina_naturae.png'),
  },
  {
    id: 'balene',
    name: 'Balene',
    category: 'Advanced cleaning technology',
    description:
      'Balene elevates dental hygiene through an advanced brush design that improves effectiveness and limits user error.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/balene.png'),
  },
  {
    id: 'vitamunda',
    name: 'Vitamunda',
    category: 'High quality nutritional supplements',
    description:
      'Vitamunda’s high-quality supplements facilitate optimal body function while bolstering natural recovery.',
    ctaLabel: 'Explore brand',
    logo: withBase('logos/vitamunda.png'),
  },
];

const initialsFor = (name: string) =>
  name
    .split(/\s+/)
    .filter(Boolean)
    .slice(0, 2)
    .map((part) => part.charAt(0).toUpperCase())
    .join('');

const homeUrl = import.meta.env.BASE_URL ?? '/';
---

<Layout
  title="Galaxy | Partners"
  description="Meet the partner brands powering Galaxy’s Albanian healthcare distribution network."
  showGlobalNav
>
  <main class="mx-auto max-w-6xl px-6 py-16">
    <a href={homeUrl} class="text-sm text-[var(--accent)]">← Back to home</a>
    <section class="space-y-4" data-animate>
      <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">Partners</p>
      <h1 class="text-4xl font-semibold text-[var(--slate)] sm:text-5xl">Trusted brands we represent in Albania.</h1>
      <p class="text-lg text-[var(--muted)]">
        Galaxy offers innovative solutions for doctors, pharmacists, and patients through a portfolio that blends effective, safe, and high-quality medications, supplements, and medical devices.
      </p>
      <p class="text-lg text-[var(--muted)]">
        Our partners benefit from a one-stop solution that manages regulatory activities, marketing, logistics, and commercialization so their products reach pharmacies and hospitals confidently.
      </p>
    </section>

    <section class="mt-12 grid gap-6 md:grid-cols-2" data-animate>
      {partners.map((partner) => (
        <article class="rounded-3xl border border-black/5 bg-white/90 p-6 shadow-sm backdrop-blur-sm">
          <div class="flex items-start gap-4">
            <div class="partner-logo flex h-20 w-20 items-center justify-center rounded-3xl bg-white p-2 shadow-sm">
              {partner.logo ? (
                <img src={partner.logo} alt={`${partner.name} logo`} class="h-full w-full object-contain" />
              ) : (
                <span class="text-base font-semibold text-[var(--accent)]">{initialsFor(partner.name)}</span>
              )}
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">{partner.category}</p>
              <h2 class="mt-2 text-2xl font-semibold text-[var(--slate)]">{partner.name}</h2>
            </div>
          </div>
          <p class="mt-4 text-[var(--muted)]">{partner.description}</p>
          <button class="mt-5 inline-flex items-center gap-2 text-sm font-semibold text-[var(--accent)]">
            {partner.ctaLabel}
            <span aria-hidden="true">→</span>
          </button>
        </article>
      ))}
    </section>
  </main>
</Layout>
