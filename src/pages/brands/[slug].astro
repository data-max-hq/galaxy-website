---
import Layout from '../../layouts/Layout.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const brands = await getCollection('brands');
  return brands.map((brand) => ({
    params: { slug: brand.id },
    props: { brand },
  }));
}

const { brand } = Astro.props as { brand: CollectionEntry<'brands'> };
const color = brand.data.featuredColor;
const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\/+/g, '')}`;
const logoSrc = brand.data.logo ? withBase(`brands/${brand.data.logo}`) : undefined;
const brandsAnchor = `${import.meta.env.BASE_URL}#brands`;
---

<Layout title={`${brand.data.name} | Galaxy Brands`} description={brand.data.description}>
  <section class="bg-white py-16">
    <div class="mx-auto max-w-5xl px-6">
      <a href={brandsAnchor} class="text-sm text-[var(--accent)]">← Back to brands</a>
      <div
        class="mt-6 grid gap-10 rounded-[2.5rem] px-10 py-12 text-white lg:grid-cols-[360px_minmax(0,1fr)]"
        style={`background: linear-gradient(135deg, ${color}, #040b16);`}
      >
        <div class="flex items-center justify-center">
          {logoSrc ? (
            <img src={logoSrc} alt={`${brand.data.name} logo`} class="h-32 w-auto object-contain" />
          ) : (
            <span class="text-6xl font-semibold">{brand.data.name}</span>
          )}
        </div>
        <div>
          <p class="text-sm uppercase tracking-[0.4em] text-white/70">Brand spotlight</p>
          <h1 class="mt-3 text-4xl font-semibold">{brand.data.name}</h1>
          <p class="mt-2 text-xl text-white/80">{brand.data.tagline}</p>
          <p class="mt-4 max-w-3xl text-base text-white/80">{brand.data.description}</p>
          {brand.data.website && (
            <a
              href={brand.data.website}
              target="_blank"
              rel="noopener"
              class="mt-6 inline-flex rounded-full bg-white/10 px-6 py-3 text-sm font-semibold text-white backdrop-blur"
            >
              Visit official site →
            </a>
          )}
        </div>
      </div>

      <div class="mt-12">
        <div class="flex flex-wrap items-baseline justify-between gap-4">
          <div>
            <p class="text-sm uppercase tracking-[0.4em] text-[var(--muted)]">Products</p>
            <h2 class="text-3xl font-semibold text-[var(--slate)]">Browse {brand.data.name} portfolio</h2>
          </div>
          <p class="text-sm text-[var(--muted)]">{brand.data.products.length} featured SKU placeholders</p>
        </div>
        <div class="mt-8 grid gap-6 md:grid-cols-3">
          {brand.data.products.map((product) => (
            <article class="glow-card rounded-3xl border border-black/5 p-6" style={`border-top: 4px solid ${color};`}>
              <p class="text-xs uppercase tracking-[0.3em] text-[var(--muted)]">{product.category}</p>
              <h3 class="mt-2 text-lg font-semibold text-[var(--slate)]">{product.name}</h3>
              <p class="mt-2 text-sm text-[var(--muted)]">{product.description}</p>
              <button class="mt-4 w-full rounded-full border border-black/10 px-3 py-2 text-sm font-semibold text-[var(--slate)]">
                View details
              </button>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>
