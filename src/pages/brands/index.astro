---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const brands = await getCollection('brands');
const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\/+/g, '')}`;
const brandLogoUrl = (logo?: string) => (logo ? withBase(`brands/${logo}`) : undefined);
const brandPageUrl = (slug: string) => withBase(`brands/${slug}/`);
---

<Layout title="Galaxy Brands" description="Explore Galaxy's featured therapy lines and portfolio partners.">
  <main class="mx-auto max-w-6xl px-6 py-16">
    <section class="space-y-4" data-animate>
      <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[var(--muted)]">Brands</p>
      <h1 class="text-4xl font-semibold text-[var(--slate)]">Portfolio lines curated for Albanian patients.</h1>
      <p class="max-w-3xl text-lg text-[var(--muted)]">
        Dive deeper into each therapy line to meet the formulations, positioning, and launches we support alongside Profarma Group.
      </p>
    </section>
    <section class="mt-10 grid gap-6 md:grid-cols-2" data-animate>
      {brands.map((brand) => {
        const logoSrc = brandLogoUrl(brand.data.logo);
        return (
          <a
            href={brandPageUrl(brand.id)}
            class="brand-card rounded-3xl p-6"
            style={`border-top: 4px solid ${brand.data.featuredColor};`}
          >
            <div class="flex items-center gap-4">
              {logoSrc && (
                <div class="brand-logo-tile flex items-center justify-center">
                  <img src={logoSrc} alt={`${brand.data.name} logo`} class="max-h-12 max-w-12 object-contain" />
                </div>
              )}
              <div>
                <p class="text-xs uppercase tracking-[0.35em] text-[var(--muted)]">Therapies</p>
                <h2 class="text-2xl font-semibold text-[var(--slate)]">{brand.data.name}</h2>
              </div>
            </div>
            <p class="mt-3 text-sm text-[var(--muted)]">{brand.data.description}</p>
            <div class="mt-5 inline-flex items-center gap-2 text-sm font-semibold text-[var(--accent)]">Explore â†’</div>
          </a>
        );
      })}
    </section>
  </main>
</Layout>
